@model List<SubjectDTO>

@{
    ViewBag.Title = "Subjects";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">📚 Subject List</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">➕ Add New Subject</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th style="width: 20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var subject in Model)
                        {
                            <tr>
                                <td>@subject.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center text-muted">No subjects available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
