@model StudentDTO
@{
    ViewBag.Title = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this student?</h4>

<div>
    <strong>Name:</strong> @Model.Name<br />
    <strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")<br />
    <strong>Address:</strong> @Model.Address<br />
</div>

<br />

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}