@model StudentDTO

@{
    ViewBag.Title = "Delete Student";
}

<div class="container mt-5 mb-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠️ Confirm Delete</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger mb-3">Are you sure you want to delete this student?</h5>

            <div class="mb-3">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("yyyy-MM-dd")</p>
                <p><strong>Address:</strong> @Model.Address</p>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" name="id" value="@Model.Id" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
